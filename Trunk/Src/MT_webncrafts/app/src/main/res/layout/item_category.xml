<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/category_width"
    android:layout_marginEnd="@dimen/common_padding"
    android:paddingHorizontal="@dimen/common_padding"
    android:paddingVertical="@dimen/small_padding"
    android:background="@drawable/category_bg"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_category"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_category_title"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/_9sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="@dimen/small_padding"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/sdv_category"
        app:layout_constraintStart_toStartOf="@+id/sdv_category"
        app:layout_constraintTop_toBottomOf="@+id/sdv_category" />

</androidx.constraintlayout.widget.ConstraintLayout>